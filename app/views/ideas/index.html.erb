<div class="contents">
  <div class="container">
    <h3>アイデア登録</h3>
    <%= form_with(model: @idea_category, url: ideas_path, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "カテゴリー名" %>
      <%= form.text_field :body, placeholder: "本文を入力" %>
      <%= form.submit "登録" %>
    <% end %>
  </div>
</div>

<div class="search">
  <h3>カテゴリー検索</h3>
  <%= form_with(url: search_ideas_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "カテゴリー名", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
</div>

<div class="result">
  -アイデア一覧-
</div>

<div class="find">
  <% @ideas.each do |idea| %>
    <div class="content_find">
      <%= idea.id %> - 
      <%= idea.category.name %>：
      <%= idea.body %>
    </div>
  <% end %>
</div>